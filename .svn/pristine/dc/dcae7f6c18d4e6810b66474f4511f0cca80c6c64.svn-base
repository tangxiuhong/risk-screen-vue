<template>
  <div class="mod-resources">
    <!--标题-->
    <el-row>
      <el-col :span="20">
        <!--内容区标题公共样式contentTitle，contentImg，contentTxt-->
        <div class="modTitleBox">
          <div class="modTitle" @click="selectLists()">
            <span class="modImg"><img src="../../../assets/img/hiddenRiskManagement/u236.png" alt=""></span>
            <span class="modTxt">应急预案</span>
          </div>
          <div class="modSelectList" v-show="selectList" @click="selectList = false">
            <div @click="$router.push({ name: 'emerManage' });">应急管理信息</div>
            <div @click="$router.push({ name: 'emerManage-resources' });">应急资源</div>
          </div>
        </div>
      </el-col>
    </el-row>
    <div class="emerManage-content" :style="{height: styleHeight}">
      <el-tabs v-model="plans" type="border-card">
        <!--应急案例-->
        <el-tab-pane label="应急预案" name="first">
          <el-form :inline="true" :model="dataForm" @keyup.enter.native="getDataList()">
            <el-form-item>
              <el-input v-model="dataForm.planName" placeholder="预案名称" clearable></el-input>
            </el-form-item>
            <el-form-item>
              <el-input v-model="dataForm.planDesc" placeholder="预案描述" clearable></el-input>
            </el-form-item>
            <el-form-item>
              <el-button @click="getDataList()">查询</el-button>
            </el-form-item>
          </el-form>
          <el-table
            :data="dataList"
            border
            v-loading="dataListLoading"
            style="width: 100%;">
            <el-table-column
              prop="planCode"
              header-align="center"
              align="center"
              label="预案编号">
            </el-table-column>
            <el-table-column
              prop="planName"
              header-align="center"
              align="center"
              label="预案名称">
            </el-table-column>
            <el-table-column
              prop="planDesc"
              header-align="center"
              align="center"
              label="预案描述">
            </el-table-column>
            <el-table-column
              fixed="right"
              header-align="center"
              align="center"
              width="150"
              label="附件下载">
              <template slot-scope="scope">
                <el-button type="text" size="small" @click="lookHandle(scope.row.id)">下载</el-button>
              </template>
            </el-table-column>
          </el-table>
          <el-pagination
            @size-change="sizeChangeHandle"
            @current-change="currentChangeHandle"
            :current-page="pageIndex"
            :page-sizes="[5]"
            :page-size="pageSize"
            :total="totalPage"
            layout="total, sizes, prev, pager, next, jumper">
          </el-pagination>
        </el-tab-pane>
        <!--危险化学品速查-->
        <el-tab-pane label="应急演练" name="second">
          <el-table
            :data="dataList2"
            border
            v-loading="dataListLoading1"
            style="width: 100%;">
            <el-table-column
              prop="drillName"
              header-align="center"
              align="center"
              label="演练名称">
            </el-table-column>
            <el-table-column
              prop="drillTime"
              header-align="center"
              align="center"
              label="演练时间">
            </el-table-column>
            <el-table-column
              prop="drillType"
              header-align="center"
              align="center"
              label="演练方式">
              <template slot-scope="scope">
                <el-tag v-if="scope.row.drillType === 1" size="small">桌面演练</el-tag>
                <el-tag v-if="scope.row.drillType === 2" size="small">功能演练</el-tag>
                <el-tag v-if="scope.row.drillType === 3" size="small">全面演练</el-tag>
              </template>
            </el-table-column>
            <el-table-column
              prop="drillRemark"
              header-align="center"
              align="center"
              label="演练备注">
            </el-table-column>
            <el-table-column
              fixed="right"
              header-align="center"
              align="center"
              width="150"
              label="附件下载">
              <template slot-scope="scope">
                <el-button type="text" size="small" @click="lookHandle(scope.row.id)">下载</el-button>
              </template>
            </el-table-column>
          </el-table>
          <el-pagination
            @size-change="sizeChangeHandle1"
            @current-change="currentChangeHandle1"
            :current-page="pageIndex1"
            :page-sizes="[5]"
            :page-size="pageSize1"
            :total="totalPage1"
            layout="total, sizes, prev, pager, next, jumper">
          </el-pagination>
        </el-tab-pane>
      </el-tabs>
    </div>
    <emer-manage-download v-if="downloadVisible" ref="download"></emer-manage-download>
  </div>

</template>

<script>
  import emerManageDownload from './emerManage-download'

  export default {
    data () {
      return {
        selectList: false,
        styleHeight: window.screen.availHeight - 118 + 'px',
        dataForm: {
          planName: '',
          planDesc: ''
        },
        plans: 'first',
        dataList: [],
        dataList2: [],
        pageIndex: 1,
        pageSize: 5,
        totalPage: 0,
        dataListLoading: false,
        pageIndex1: 1,
        pageSize1: 5,
        totalPage1: 0,
        dataListLoading1: false,
        downloadVisible: false
      }
    },
    components: {
      emerManageDownload
    },
    activated () {
      this.getDataList()
      this.getDataList2()
    },
    methods: {
      // 标题切换
      selectLists () {
        this.selectList = !this.selectList
      },
      // 获取数据列表
      getDataList () {
        this.dataListLoading = true
        this.$http({
          url: this.$http.adornUrl('/emergency/appEmergencyPlan/list'),
          method: 'get',
          params: this.$http.adornParams({
            'page': this.pageIndex,
            'limit': this.pageSize,
            'planName': this.dataForm.planName,
            'planDesc': this.dataForm.planDesc
          })
        }).then(({data}) => {
          if (data && data.code === 0) {
            this.dataList = data.page.list
            this.totalPage = data.page.totalCount
          } else {
            this.dataList = []
            this.totalPage = 0
          }
          this.dataListLoading = false
        })
      },
      getDataList2 () {
        this.dataListLoading = true
        this.$http({
          url: this.$http.adornUrl('/emergency/appEmergencyDrill/list'),
          method: 'get',
          params: this.$http.adornParams({
            'page': this.pageIndex1,
            'limit': this.pageSize1
          })
        }).then(({data}) => {
          if (data && data.code === 0) {
            this.dataList2 = data.page.list
            this.totalPage1 = data.page.totalCount
          } else {
            this.dataList2 = []
            this.totalPage1 = 0
          }
          this.dataListLoading1 = false
        })
      },
      // 每页数
      sizeChangeHandle (val) {
        this.pageSize = val
        this.pageIndex = 1
        this.getDataList()
      },
      // 当前页
      currentChangeHandle (val) {
        this.pageIndex = val
        this.getDataList()
      },
      // 每页数
      sizeChangeHandle1 (val) {
        this.pageSize1 = val
        this.pageIndex1 = 1
        this.getDataList2()
      },
      // 当前页
      currentChangeHandle1 (val) {
        this.pageIndex1 = val
        this.getDataList2()
      },
      //  下载 弹框
      lookHandle (id) {
        this.downloadVisible = true
        this.$nextTick(() => {
          this.$refs.download.init(id)
        })
      }
    }
  }
</script>

